{
  "name": "Roger Watcher",
  "description": "A validator for Universal Analytics implementations",
  "version": "0.6.5",
  "icons": {
    "16": "img/min16.png",
    "36": "img/icon36.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["js/background.js"]
  },
  "devtools_page": "devtools.html",
  "web_accessible_resources": [
    "*"
  ],
  "content_security_policy": "script-src 'self' https://www.google-analytics.com; img-src *; object-src 'self'",
  "manifest_version": 2
}

