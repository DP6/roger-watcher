{
  "name": "Roger Watcher",
  "description": "A validator for Universal Analytics implementations",
  "version": "0.6.0",
  "icons": {
    "32": "img/logo32.png",
    "48": "img/logo48.png",
    "64": "img/logo64.png",
    "128": "img/logo128.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["js/background.js"]
  },
  "devtools_page": "devtools.html",
  "web_accessible_resources": [
    "*"
  ],
  "content_security_policy": "script-src 'self' https://www.google-analytics.com; img-src *; object-src 'self'",
  "manifest_version": 2
}

